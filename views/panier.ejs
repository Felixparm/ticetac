<% if(basketVoyage.length < 1){%>
    <h5 class="no-article">No article in the Basket</h5>

<%} else {%>
<div id="row">
  <div class="col-12 col-sm-10 text-center ">
    <table class="table">
        <thead>
          <tr>
            <th scope="col">N°</th>
            <th scope="col">Journey</th>
            <th scope="col">Date</th>
            <th scope="col">Departure Time</th>
            <th scope="col">Price</th> 
          </tr>
        </thead>

        <tbody>
            <% 
            for(var i=0;i<basketVoyage.length;i++){
                %>   
          <tr class="basket-item">
            <th scope="row">1</th>          
            <td><%= basketVoyage[i].depart %>/ <%= basketVoyage[i].arriver %></td>            
            <td><%= dateFormat(basketVoyage[i].date) %></td>
            <td><%= basketVoyage[i].time %></td>
            <td><%= basketVoyage[i].price %></td>
          </tr>
          <%
                            }
                            %>
          <tr class="table-danger">
            <td>Total</td>
            <td></td>
            <td></td>
            <td></td>
            <td>679€</td>
            
          </tr>
          
        </tbody>
    </table>
    <button type="submit" class="btn btn-danger" style="margin-left:80%;">Confirm</button>
  </div>
  
    

</div>
<%}%>
  </body>
</html>
